<h1>
  <%= @guide_revision.title %>
  <div>
    <% if current_user.admin? %>
      <%= link_to 'All Revisions', guide_revisions_path, class: 'btn btn-primary pull-right guide-rev-btn' %>
      <%= link_to "Reject", reject_guide_revision_path(@guide_revision), method: 'PATCH', class: "btn btn-primary pull-right guide-rev-btn" %>
      <%= link_to "Approve", approve_guide_revision_path(@guide_revision), method: 'PATCH', class: "btn btn-primary pull-right guide-rev-btn" %>
    <% end %>
  </div>
</h1>

<div class="guide-rev">
  <% if current_user && (current_user.id == @guide_revision.user.id) %>
    <span class="revision-status">Status:
      <% if @guide_revision.status == 'approved' %>
        <span class="status-a">Approved</span>
      <% elsif @guide_revision.status == 'rejected' %>
        <span class="status-r">Rejected</span>
      <% else %>
        <span class="status-p">Pending</span>
        <% if current_user.id == @guide_revision.user.id %>
          <%= link_to 'Edit revision', edit_guide_revision_path(@guide_revision), class: "btn btn-primary pull-right guide-rev-btn" %>
        <% end %>
      <% end %>
      <%= link_to 'My Revisions', guide_revisions_path, class: "btn btn-primary pull-right guide-rev-btn" %>
    </span>  
  <% end %>
</div>

<div><%= @guide_revision.body_markdown %></div>
