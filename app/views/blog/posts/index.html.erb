
    <% @blog_posts.each do |blog_post| %>
      <article>
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <p>By <%= blog_post.user.username %> on <%= blog_post.published_on %></p>
        <%= blog_post.body_html %>
      </article>
    <% end %>

